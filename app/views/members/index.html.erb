<h1>Listing all members</h1>

<table id = "posttbl">
  <tr>
    <%if  @members.any? %>
    <th>Name</th>
    <%else %>
    <th>No members created yet for bowling, please create a new member.</th>
    <%end%>
  </tr>

  <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= link_to 'Remove', members_deactivate_path(id: member),
        method: :deactivate,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<br>
<br>


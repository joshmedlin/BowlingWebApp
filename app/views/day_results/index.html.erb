<h1>Listing all Days</h1>

<table id = "posttbl">
  <tr>
    <%if @days.any? %>
    <th>Date</th>
    <%end%>
  </tr>


<% @days.each do |day| %>
  <tr>
    <td><%= day.date %></td>
    <td><%= link_to 'View', day_results_day_path_path(day),
      method: :dayIndex %></td>
  </tr>
<% end %>
</table>

<% if Day.where(date: Date.today).empty? %>
<h1>Welcome to the Bowling Web App</h1>
<% @day = Day.new %>
<% @day.date = Date.today %>
<% @day.save %>
<% else %>
<h1>Rounds</h1>
<%=Round.where(day_id: Day.where(date: Date.today).last.id).each do |round| %>
<h2>Round: <%= round.id %></h2>
<%Team.all.each do |team| %>
  <%@team = team %>
  <h3> Team: <%= @team.name %></h3>
  <%MembersInTeam.where(team_id: @team.id).each do |m| -%>
    <p><%= Member.find(m.member_id).name  %>: </p>
    <% if !Score.where(round_id: round.id, member_id: m.member_id).empty? %>
      <p><%= Score.where(round_id: round.id, member_id: m.member_id).last.score %> </p>
    <%end%>
  <%end -%>
<%end%>
<%end%>
<%end%>

<% if Day.where(date: Date.today).empty? %>
<h1>Welcome to the Bowling Web App</h1>
<% @day = Day.new %>
<% @day.date = Date.today %>
<% @day.save %>
<%elsif (TeamsInDay.where(day_id: Day.where(date: Date.today).last.id).empty? ||
Round.where(day_id: Day.where(date: Date.today).last.id).empty? ||
Score.where(round_id: Round.where(day_id: Day.where(date: Date.today).last.id).last.id).empty?)%>
<h1>Welcome to the Bowling Web App</h1>
<% else %>

<h1>Listing all Days</h1>
<%@days = Day.all %>
<table id = "posttbl">
  <tr>
    <%if @days.any? %>
    <th>Date</th>
    <%end%>
  </tr>


<% @days.each do |day| %>
  <tr>
    <td><%= day.date %></td>
    <td><%= link_to 'View', day_path_path(day),
      method: :show %></td>
  </tr>
<% end %>
</table>
<br>
<br>

<%end%>
